{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name for the virtual WAN. Used as the base of all other names."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "West Europe",
      "metadata": {
        "description": "Azure region."
      }
    },
    "hubAddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "CIDR Address Space to use for the hub."
      },
      "defaultValue": "201.1.0.0/24"
    },
    "s2sVpnGatewayScaleUnit": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "500 Mbps per scale unit as per <https://azure.microsoft.com/pricing/details/virtual-wan/>."
      }
    },
    "site": {
      "type": "object",
      "metadata": {
        "description": "Object for site information.",
        "example": {}
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.Network/virtualWans",
      "apiVersion": "2020-11-01",
      "location": "[parameters('location')]",
      "properties": {
        "allowVnetToVnetTraffic": true,
        "allowBranchToBranchTraffic": false,
        "type": "Standard"
      }
    },
    {
      "name": "[concat(parameters('name'), '-hub')]",
      "type": "Microsoft.Network/virtualHubs",
      "apiVersion": "2020-11-01",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualWans', parameters('name'))]"
      ],
      "properties": {
        "virtualWan": {
          "id": "[resourceId('Microsoft.Network/virtualWans', parameters('name'))]"
        },
        "addressPrefix": "[parameters('hubAddressPrefix')]",
        "allowBranchToBranchTraffic": false
      }
    },
    {
      "type": "Microsoft.Network/vpnGateways",
      "name": "[concat(parameters('name'), '-vpngw')]",
      "apiVersion": "2020-05-01",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualHubs', concat(parameters('name'), '-hub'))]"
      ],
      "properties": {
        "vpnGatewayScaleUnit": "[parameters('s2sVpnGatewayScaleUnit')]",
        "virtualHub": {
          "id": "[resourceId('Microsoft.Network/virtualHubs', concat(parameters('name'), '-hub'))]"
        },
        "bgpSettings": {
          "asn": 65515
        }
      }
    },
    {
      "name": "[parameters('site').name]",
      "type": "Microsoft.Network/vpnSites",
      "apiVersion": "2020-07-01",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/virtualWans', parameters('name'))]"
      ],
      "properties": {
        "ipAddress": "[parameters('site').ipAddress]",
        "bgpProperties": {
          "asn": "[parameters('site').asn]",
          "bgpPeeringAddress": "[parameters('site').bgpPeeringAddress]",
          "peerWeight": 0
        },
        "deviceProperties": "[parameters('site').deviceProperties]",
        "virtualWan": {
          "id": "[resourceId('Microsoft.Network/virtualWans', parameters('name'))]"
        },
        "vpnSiteLinks": [
          {
            "name": "[concat(parameters('site').name, '-link1')]",
            "properties": {
              "ipAddress": "[parameters('site').ipAddress]"
            }
          }
        ]
      }
    },
    {
      "name": "[concat(parameters('site').name, '-lng')]",
      "type": "Microsoft.Network/localNetworkGateways",
      "apiVersion": "2020-11-01",
      "location": "[parameters('location')]",
      "properties": {
        "gatewayIpAddress": "string",
        "bgpSettings": {
          "asn": "integer",
          "bgpPeeringAddress": "string"
        }
      }
    },
    {
      "name": "[concat(parameters('name'), '-vpngw/to-', parameters('site').name)]",
      "type": "Microsoft.Network/vpnGateways/vpnConnections",
      "apiVersion": "2020-11-01",
      "dependsOn": [
        "[resourceId('Microsoft.Network/vpnGateways', concat(parameters('name'), '-vpngw'))]"
      ],
      "properties": {
        "remoteVpnSite": {
          "id": "[resourceId('Microsoft.Network/vpnSites', parameters('site').name)]"
        },
        "vpnConnectionProtocolType": "IKEv2",
        "enableBgp": true
      }
    }
  ],
  "outputs": {}
}